# ContextAI Backend Environment Variables

# Server
PORT=5000
NODE_ENV=development

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/contextai
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=contextai
PG_USER=postgres
PG_PASSWORD=password

# ChromaDB Vector Database
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Google AI (Gemini Pro)
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Secret (for agent sessions)
JWT_SECRET=your_jwt_secret_here

# CORS â€“ for external websites / embeddable widgets
# Single origin:  CORS_ORIGIN=https://app.example.com
# Multiple (comma-separated):  CORS_ORIGIN=https://app.com,https://widget.example.com
# Allow all origins:  CORS_ORIGIN=*  or  CORS_ALLOW_ALL=true
CORS_ORIGIN=http://localhost:3000
